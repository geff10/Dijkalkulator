package esse.Dijkalkulator;

import javax.swing.JFrame;
import javax.swing.JPanel;
import java.awt.BorderLayout;
import net.miginfocom.swing.MigLayout;
import javax.swing.JMenuBar;
import javax.swing.JMenu;
import javax.swing.JMenuItem;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class GUIForDijkalkulator extends JFrame {
	public GUIForDijkalkulator() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(700, 700);
		
		getContentPane().setLayout(new MigLayout("", "[grow][][]", "[grow][]"));
		
		JPanel panel = new JPanel();
		getContentPane().add(panel, "cell 0 0,grow");
		panel.setLayout(new MigLayout("", "[]", "[]"));
		
		JMenuBar menuBar = new JMenuBar();
		setJMenuBar(menuBar);
		
		JMenu mnFile = new JMenu("File");
		menuBar.add(mnFile);
		
		JMenuItem mntmKapacitsTpusok = new JMenuItem("Kapacitás típusok");
		mnFile.add(mntmKapacitsTpusok);
		
		JMenuItem mntmKapacitsok = new JMenuItem("Kapacitások");
		mnFile.add(mntmKapacitsok);
	}

}
